<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <fragment
        android:id="@+id/fragment_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        class="com.example.fe_prm.view_your_reservation.fragment.toolbar_fragment"
        tools:layout="@layout/toolbar_fragment"
        android:layout_alignParentTop="true"
        />
    <ScrollView
        android:id="@+id/sv_scrollview"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_main_black"
        android:layout_below="@id/fragment_toolbar"
        android:paddingBottom="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_main_black"
            >
            <!--    ImageView for top background image-->
            <ImageView
                android:id="@+id/iv_background"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/restaurant_backround"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv_helloUserAtReservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, Calicut!"
                android:textSize="20dp"
                android:textColor="#A8A8A8"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/iv_background"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/tv_reservationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Reservations yet"
                android:textSize="36dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_helloUserAtReservation"
                app:layout_constraintLeft_toLeftOf="@id/tv_helloUserAtReservation"/>
            <!--    RecyclerView for list of reservations-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_listReservation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintTop_toBottomOf="@id/tv_reservationTitle"
                />
            <ImageView
                android:id="@+id/iv_addNewReservation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add_icon"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_listReservation"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>
